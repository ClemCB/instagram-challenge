<%= link_to 'Back', posts_path %>

<div id="content">
  <b><a href="../users/<%=@post.user_id%>"><%= (User.find(@post.user_id)).username %></a></b><p>
      <img id="picture_and_caption" src="<%= @post.pics.url %>"><p>

      <blockquote>
        <%= @post.caption %>
      </blockquote><p>
      <div class='likes'>
         <%= @post.likes.count %> Likes
      </div>

      <% @post.comments.each do |comment| %>
      <a href="../users/<%=comment.user_id%>"><%= (User.find(comment.user_id)).username %></a>: <%= comment.comment %><br>
      <% end %>

      <%= link_to 'Comment', new_comment_path(post_id: @post.id) %>
      <% if user_signed_in? %>
      <% if current_user.id == @post.user_id %>
        <p><%= link_to 'Edit', edit_post_path(@post) %> |
        <%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
      <% end %>
        <p>
        <br>
